<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        @import url('https://stackpath.bootstrapcdn.com-awesome/4.7.0/css-awesome.min.css');
        body {
            background-color: white;
            color: black;
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid black;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: black;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        td:nth-child(2) { /* Target the Fullname column */
            max-width: 200px; /* Set a maximum width */
            overflow: hidden; /* Hide overflowing content */
            white-space: nowrap; /* Prevent line breaks */
            text-overflow: ellipsis; /* Display ellipsis (...) for overflow */
        }

        @media screen and (max-width: 600px) {
            table {
                font-size: 12px;
            }

            .user-id-column{
                display: none;
            }
        }
    </style>
    <title>User Details Table</title>
</head>
<body>
    <h1>User Details</h1>
    <table>
        <thead>
            <tr>
                <th class="user-id-column">User ID</th>
                <th>Fullname</th>
                <th>Username</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody id="user-details">
            <!-- User details rows will be added here using JavaScript -->
            <% user.forEach(user => { %>
                <tr>
                    <td class="user-id-column"><%= user.id %></td>
                    <td><%= user.fullName %></td>
                    <td><%= user.userName %></td>
                    <td><%= user.email %></td>
                </tr>
            <% }); %>
        </tbody>
        <!-- Add more rows as needed -->
    </table>
</body>
</html>
