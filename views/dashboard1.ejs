<body>
    <div class="tool-box">
        <h1 style="color: gold; font-size: 30px; text-align: center;margin-top: 15px;">Profile board</h1>
        <div class="profile-content">
            <div class="profile-info">
                <div class="info">
                    <h3>Full name:</h3> <p><%= users.fullName%></p>
                    <h3>Username:</h3> <p><%= users.userName %></p>
                    <h3>Email:</h3> <p><%= users.email %></p>
                    
                </div>
            </div>
<br><br>
            <button class="profile-btn">Edit profile<a href="#"></a></button>
        </div>
        
    </div>

    <div class="body-content">
        <div class="primary-header flex">
            <div class="logo"> <img src="/ASSETS/WHITE.png" alt="Logo" class="imgLogo"></div>

            <button class="mobile-nav-toggle" aria-controls="primary-navigation" aria-expanded="false">
                <span style="font-size:30px;cursor:pointer;" style="overflow: hidden;">â˜°</span>

            </button>

            <nav>
                <ul id="primary-navigation" data-visible='false' class="primary-navigation flex">
                    <li class="active pattern"><a href="/dashboard"><i class="fa fa-dashboard icons"></i></a>
                        Dashboard
                    </li>
                    <li class="pattern"><a href="#">
                        <span aria-hidden="true"></span><i class="fa fa-file-invoice icons"></i>Transactions</a>
                        <ul class="dropdown">
                            <li><a href="/plans"><i class="fa fa-donate icons"></i>Deposit</a></li>
                            <li><a href="/withdraw"><i class="fa fa-hand-holding-usd icons"></i>Withdraw</a></li>
                        </ul>
                    </li>
                    <li class="pattern"><a href="/profile">
                        <span aria-hidden="true"></span><i class="fa fa-user icons"></i>Profile</a>
                    </li>
                    <li class="pattern"><a href="/">
                        <span aria-hidden="true"></span><i class="fa fa-door-open icons"></i>Logout</a>
                    </li>
                </ul>
            </nav> 
        </div>
        <div class="team-area">
            <div class="single-team one">
                <div class="box">
                    <p>
                        <span>Total Deposit</span><br>
                        <span id="displayDeposit" style="color: #fff">$ <%= balance %></span>
                    </p>
                    <i class="fa fa-donate box-icon"></i>
                </div>
            </div>

            <div class="single-team two">
                <div class="box">
                        <p>
                            <span>Total Withdrawn</span> <br>
                            <span id="withdraw-primary" style="color: #fff">$ <%= withdraw %></span>
                        </p>
                        <i class="fa fa-hand-holding-usd box-icon"></i>
                </div>
            </div>

            <div class="single-team three">
                <div class="box">
                    <p>             
                        <span>Account Balance</span> <br>
                        <span id="balance-primary" style="color: #fff">$ <%= totalBalance %></span>
                    </p>
            
                    <i class="fa fa-shopping-bag box-icon"></i>
                </div>
                
            </div>

            <div class="single-team four">
                <div class="box">
                    <p>
                        <span>Active investments</span> <br>
                        <span id="activeInvestments" style="color: #fff">$ <%= activeInvestment%></span>
                    </p>
    
                    <i class="fa fa-tasks box-icon"></i>
                </div>
            </div>
        </div>  
        <br><br><br>

        <div class="head"style="background-color: #3b288f;padding: 20px 30px;">
            <span style="font-size:30px;cursor:pointer; color: gold ;" class="nav3"  >Transaction history</span>
        </div> <br>
        <!-- Deposit and withdraw -->
        
        
                <!-- Transaction History Section -->
                
        <div class="col-div-8">
            <div class="box-8" style=" padding-top: 20px; padding-left: 10px;">
              <div class="content-box">
                <!-- <p style="color: gold;">Transactions</p> -->
                <table id="transaction-history-table">
                    <thead>
                        <tr>
                          <th>Type</th>
                          <th>Amount</th>
                          <th>Date</th>
                        </tr>
                      </thead>
                  <tbody id="transaction-history">
                    <!-- Transaction history rows will be added here using JavaScript -->
                    <% deposits.forEach(deposit => { %>
                        <tr>
                          <td><%= deposit.plan %></td>
                          <td><%= deposit.amount %></td>
                          <td><%= deposit.createdAt %></td>
                        </tr>
                      <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <div id="overlay"></div>
        </div>
    </div>


    <script>
        const primaryNav = document.querySelector(".primary-navigation");
        const navToggle =  document.querySelector(".mobile-nav-toggle");
    
        navToggle.addEventListener("click", () => {
            const visibility = primaryNav.getAttribute("data-visible");
    
            if(visibility === "false") {
                primaryNav.setAttribute("data-visible", true);
            } else if (visibility === "true"){
                primaryNav.setAttribute("data-visible", false);  
            }
        }) 
    </script>
