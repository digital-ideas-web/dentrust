<!-- emailTemplate.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Deposit Confirmation</title>
    <style>
        @import url('https://stackpath.bootstrapcdn.com-awesome/4.7.0/css-awesome.min.css');
        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            list-style: none;
        }

        body, html{
            display: grid;
            justify-content:center;
            height: 100%;
            width: 100%;
            align-self: center;
            background-color: #fff4ff;
        }

        header{
            height: 40%;
            padding: 1.5vw;
            background-color: #3b288F;
            color: #fff4ff;
        }

            .imgLogo {
        width: 15rem;
        filter: grayscale(100%);
        -webkit-filter: grayscale(100%);
        filter: brightness(0) invert(1);
        /* border: 2px solid #fff; */
        }

        .bodyContent{
            display: grid;
            justify-content: center;
            align-items: center;
            padding: 2vw;
        }

        .bodyContent h2 {
            text-align: center;
        }

        footer{
            text-align:center;
            background-color: #3b288F;
            height: 35%;
            padding: 1.5vw;
            color: #fff4ff;
        }

        footer a{
            color: #fff4ff;
        }
    </style>
</head>
<body>
    <header>
        <!-- Company Logo -->
        <div class="logo">
            <img src="https://eternaltrading.org/ASSETS/WHITE.png" alt="Logo" class="imgLogo">
         </div>
    </header><br><br>
    <main>
        <h3 style="font-weight: bold;">Registration completed</h3><br><br>
        <p>
            <h5> Dear <%= name %></h5><br><br> 
            Thank you for joining our program <br> <br>
            You are now an official member of this program. <br><br>
            You can <a href="https://eternaltrading.org/login">login</a> to your account to start investing with us and use all the services that are available for our members.

        </p> <br> <br>
        <p>
            <b>Important:</b> Do not provide your login and password to anyone.
        </p>
    </main>
    <footer>
        <!-- Company Footer -->
        <p>If you have any questions feel free to reach out to us at <a href="support@eternaltrading.org">support@eternaltrading.org</a></p><br>
        <p>All right reserved. Update email preferences or unsubscribe.</p><br><br>
        <p>Terms of use | Privacy Policy</p>
    </footer>
</body>
</html>
